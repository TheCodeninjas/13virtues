%h2 Enter violation
= calendar(:year=>2014, :month=>12) do |d|
	-link_to d.day, classroom_virtueentries_path(d)

=form_tag classroom_virtueentries_path(@classroom), :method=>:post do
	%table.form
		%tbody
			%tr
				%td
					= label :virtueentry, :date, 'Date'
					= date_select :virtueentry, :date
			%tr
				%td
					= label :virtueentry, :v_id, 'Virtue id'
					= text_field :virtueentry, :v_id
			%tr
				%td
					= label :virtueentry, :v_id, 'Violation count'
					= text_field :virtueentry, :violation_count
			%tr
				%td
					= label :note, :note, 'Notes'
					= text_field :note, :note
			%tr
				%td
					= submit_tag "Make Entry"
