%h3 Welcome to Benjamin Franklin's Virtues' tracker

%table.login
	%tbody
		%tr
			%td
				=form_tag sessions_path, :method => :post do
					%table
						%tbody
							%tr
								%td
									= label :session, :id, 'Login ID (email id)'
									= text_field :session, :id
							%tr
								%td
									= label :session, :password, 'Password'
									= password_field_tag :password, :user, :value=>nil
							%tr
								%td.r
									= submit_tag 'Login'
			%td
				=form_tag users_path, :method => :post do
					%table
						%tbody.r
							%tr
								%td
									= label :user, :first_name, 'First Name'
									= text_field :user, :first_name
							%tr
								%td
									= label :user, :last_name, 'Last Name'
									= text_field :user, :last_name
							%tr
								%td
									= label :user, :email, 'Email'
									= text_field :user, :email
							%tr
								%td
									= label :user, :password, 'Password'
									= password_field_tag :password, :user, :value=>nil
							%tr
								%td
									= submit_tag 'Register'
