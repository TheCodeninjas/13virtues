-if @current_user.can_create_class?
	%h3 Add new Class
	=form_tag classrooms_path, :method=>:post do
		%table.form
			%tbody
				%tr
					%td
						= label :classroom, :name, 'Class Name'
						= text_field :classroom, :name
				%tr
					%td
						= label :classroom, :startdate, 'Start Date'
						= date_select :classroom, :startdate
				%tr
					%td
						= submit_tag "Create Class"

%h3 Register for Class
=form_tag register_classrooms_path, :method=>:post do
	%table.form
		%tbody
			%tr
				%td
					= label :classroom, :name, 'Class Name'
					= text_field :classroom, :name
			%tr
				%td
					= submit_tag "Register for Class"
