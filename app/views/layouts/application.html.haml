!!! 5
%html
  %head
    %title 13Virtues Tracker!
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
 
  %body
    - if @current_user
      =link_to 'Logout '+@current_user.name+' '+@current_user.email, '/logout'#logins_path, :method=>:destroy

    - if flash[:msg]
      =flash[:msg]

    #main
      = yield
